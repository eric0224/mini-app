<SearchInput></SearchInput>
<view class="category_index">
    <scroll-view class="left_menu" scroll-y>
        <view class="menu_item {{currentIndex===index?'active':''}}"
        wx:for="{{menuList}}"
        wx:key="*this"
        data-index="{{index}}"
        bindtap="handleMenuTap"
        >
        {{item}}
        </view>
    </scroll-view>
    <scroll-view class="right_data" scroll-y>
        <view class="goods_list"
        wx:for="{{goodsList}}"
        wx:for-index="index1"
        wx:for-item="item1"
        wx:key="index1">
            <view class="goods_list_title">
                <text class="separator">/</text>
                <text class="list_title">{{item1.cat_name}}</text>
                <text class="separator">/</text>
            </view>
            <view class="goods_list_content">
                <navigator class="goods_item"
                wx:for="{{item1.children}}"
                wx:for-index="index2"
                wx:for-item="item2"
                wx:key="cat_id">
                    <image mode="widthFix" src="{{item2.cat_icon}}"/>
                    <view class="item_name">{{item2.cat_name}}</view>
                </navigator>
            </view>
        </view> 
    </scroll-view>
     
</view>